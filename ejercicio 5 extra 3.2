	sumaTotal = 0
	truncado = 0
	
	repetir
		truncado = n mod(10)
		sumaTotal = sumaTotal + truncado
		n = trunc(n/10)
		si n < 10
			sumaTotal = sumaTotal + n
		finsi
	hasta que n < 10
	
FinFuncion

