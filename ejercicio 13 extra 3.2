Funcion mcDivisor<-MCD(may, men)
	
	definir resto, mcDivisor Como Real
	resto = 0
	mcDivisor = 0
	
	resto = may mod(men)
	
	si resto = 0
		mcDivisor = men
	SiNo
		mcDivisor = MCD(men, resto)
	FinSi
	
FinFuncion

