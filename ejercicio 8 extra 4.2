subproceso ventasDeTodos(array)
	
	definir i,j,sumaDeTodos Como Entero
	sumaDeTodos=0
	
	para i=1 hasta 4
		para j=1 hasta 5
			sumaDeTodos = sumaDeTodos + array(i,j)
		FinPara
	FinPara
	
	escribir 'La venta total de todos los vendedores fue: ' sumaDeTodos
	
FinSubProceso

subproceso ventasXvendedor(array)
	
	definir option,i,j,sumaXvendedor Como Entero
	sumaXvendedor=0
	
	repetir
		escribir 'Elija un vendedor:'
		escribir 'Opcion 1: Vendedor1'
		escribir 'Opcion 2: Vendedor2'
		escribir 'Opcion 3: Vendedor3'
		escribir 'Opcion 4: Vendedor4'
		leer option
		si option<>1 y option<>2 y option<>3 y option<>4
			escribir 'OPCION INVALIDA, INTENTE DE NUEVO'
		FinSi
	hasta que option=1 o option=2 o option=3 o option=4
	
	Segun option Hacer
		1:
			para i=1 hasta 1
				para j=1 hasta 5
					sumaXvendedor = sumaXvendedor + array(i,j)
				FinPara
			FinPara
		2:
			para i=2 hasta 2
				para j=1 hasta 5
					sumaXvendedor = sumaXvendedor + array(i,j)
				FinPara
			FinPara
		3:
			para i=3 hasta 3
				para j=1 hasta 5
					sumaXvendedor = sumaXvendedor + array(i,j)
				FinPara
			FinPara
		4:
			para i=4 hasta 4
				para j=1 hasta 5
					sumaXvendedor = sumaXvendedor + array(i,j)
				FinPara
			FinPara
	Fin Segun
	
	escribir 'El vendedor hizo ' sumaXvendedor ' ventas.'
FinSubProceso

