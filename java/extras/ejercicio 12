package javaprueba;

import java.util.Scanner;

public class JavaPrueba {

    public static void main(String args[]){
        Scanner sc = new Scanner(System.in);
        int i;
        System.out.println("Ingrese la altura de la escalera");
        int num = sc.nextInt();
        int j = 1;
        while (j <= num) {
            for (i = 1; i <= j; i++) {
                System.out.print(i);
            }
            System.out.println("");
            j++;
        }
    }
}
